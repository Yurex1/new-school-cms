// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id   Int    @id @default(autoincrement())
  name String
  //required: true

  login    String
  //required: true
  password String
  // required: true
  isAdmin  String
  school   String
  date     DateTime @default(now())
}

model School {
  id   Int    @id
  name String
  type String
}

model Note {
  id               Int    @id @default(autoincrement())
  fullname         String
  locationOfLiving String
  locationOfStudy  String
  dateOfBirth      String
  specialCategory  String
  sex              String
  formOfStudy      String
}
